<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    tools:context=".UpdateModule">

    <EditText
        android:id="@+id/updatemcode"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/Widget.AppCompat.EditText"
        android:hint="Module code"
        android:autofillHints="Introduction to programming CPL101"
        android:inputType="text" />



    <EditText
        android:id="@+id/updatemname"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/Widget.AppCompat.EditText"
        android:hint="Module name"
        android:autofillHints="Introduction to programming CPL101"
        android:inputType="text" />

    <EditText
        android:id="@+id/updatemtutor"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/Widget.AppCompat.EditText"
        android:hint="Module tutor"
        android:autofillHints="Prof. Venka"
        android:inputType="text" />


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/updatesave"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Update" />
</LinearLayout>